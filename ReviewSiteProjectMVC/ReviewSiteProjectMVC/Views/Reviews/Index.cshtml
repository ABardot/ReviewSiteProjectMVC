@model IEnumerable<ReviewSiteProjectMVC.Models.Review>

@{
    ViewBag.Title = "Index";
}

<link href="https://use.fontawesome.com/releases/v5.0.8/css/all.css" rel="stylesheet">

<h2>Game Reviews</h2>

<p>
    <a href="~/Reviews/Create" type="btn" class="btn swagButton">Create</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-12 review-header">
            <div class="col-md-4 displayLeft">
                <img src="~/Content/img/arma.png" />
            </div>
            <div class="col-md-8 displayRight">
                <ul>
                    <li>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </li>
                    <li>
                        @Html.DisplayFor(modelItem => item.Title)
                    </li>
                    <li>
                        @Html.DisplayFor(modelItem => item.Publisher)
                    </li>
                    <li>
                        @Html.DisplayFor(modelItem => item.PublishedDate)
                    </li>
                    <li>
                        @Html.DisplayFor(modelItem => item.GameReview)
                    </li>
                    <li>
                        @Html.DisplayFor(modelItem => item.GameScore)/10
                        <span class="fas fa-star checked"></span>
                        <span class="fas fa-star checked"></span>
                        <span class="fas fa-star checked"></span>
                        <span class="fas fa-star"></span>
                        <span class="fas fa-star"></span>
                    </li>
                    <li>
                        <i class="fas fa-dollar-sign"></i> @Html.DisplayFor(modelItem => item.Price).00
                    </li>
                 </ul>
            </div>
            <div>
                <button class="swagger">@Html.ActionLink("Edit", "Edit", new { id = item.GameID })</button>          
                <button class="swagger">@Html.ActionLink("Details", "Details", new { id = item.GameID })</button>
                <button class="swagger">@Html.ActionLink("Delete", "Delete", new { id = item.GameID })</button> 
            </div>
        </div><!-- col-md-12 end-->
      }
</div><!-- row end-->


